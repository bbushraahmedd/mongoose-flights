
<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departure</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= flight.airline %></td>
      <td><%= flight.flightNo %></td>
      <td><%= flight.airport %></td>
      <td><%= flight.departs %></td>
    </tr>
  </table>

  <br><br><h2>Add A Destination</h2>
  <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Destination:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="STL">STL</option>
    </select>
   <br>

  <label>Arrival</label>
  <input type="datetime-local" name="arrival">
 <br>
 <br>
  <input type="submit" value="Add Destination">
</form>

  <% if (flight.destinations.length) { %>
		<table>
		  <thead>
			<tr>
			  <th>Airport</th>
			  <th>Arrival</th> 
			</tr>
		  </thead>
		  <tbody>
			<% flight.destinations.forEach(function(d) { %>
			<tr>
				<td><%= d.airport %></td> 
        <td><%= d.arrival %></td> 
        <!-- trying to figure out how to pull all the info to the database (show in the server,, it works in the terminal though) -->
      </tr>
			<% }); %>
		  </tbody>
		</table>
	  <% } else { %>
		<h5>No Destination Chosen</h5>
	  <% } %>

    <br></br>
    <h2>Tickets</h2>
    <table>
        <thead>
            <tr>
                <th>Seat</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% ticket.forEach(function(t){ %>
                <tr>
                    <td><%= t.seat %> </td>
                    <td><%= t.price %> </td>
                </tr>
            <% }) %> 

        </tbody>
    </table>
    <br></br>
    <a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a>
  
<%- include('../partials/footer') %>
